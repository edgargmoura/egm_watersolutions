---
import SectionHeading from './SectionHeading.astro';

const technologies = [
  {
    title: "Internet das Coisas (IoT)",
    description: "Sensores inteligentes para monitoramento em tempo real de parâmetros de qualidade da água e eficiência operacional.",
    image: "https://images.pexels.com/photos/8853537/pexels-photo-8853537.jpeg?auto=compress&cs=tinysrgb&w=200&h=150&dpr=1"
  },
  {
    title: "Biofiltração Avançada",
    description: "Sistemas naturais potencializados por tecnologia para tratamento eficiente e de baixo impacto ambiental.",
    image: "https://images.pexels.com/photos/4439547/pexels-photo-4439547.jpeg?auto=compress&cs=tinysrgb&w=200&h=150&dpr=1"
  },
  {
    title: "Energia Renovável Integrada",
    description: "Sistemas de energia solar e recuperação energética que tornam estações de tratamento autossuficientes.",
    image: "https://images.pexels.com/photos/9875414/pexels-photo-9875414.jpeg?auto=compress&cs=tinysrgb&w=200&h=150&dpr=1"
  }
];
---

<section class="py-20 bg-gradient-to-br from-secondary-50 to-primary-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <SectionHeading 
      title="Tecnologias & Inovação" 
      subtitle="Integração de tecnologias avançadas nos serviços para tornar o saneamento mais eficiente e sustentável"
      centered={true}
    />
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
      {technologies.map((tech, index) => (
        <div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100" data-aos="fade-up" data-aos-delay={index * 100}>
          <div class="relative h-24 overflow-hidden">
            <img 
              src={tech.image} 
              alt={tech.title} 
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-primary-600/20"></div>
          </div>
          
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-3 text-gray-900">{tech.title}</h3>
            <p class="text-gray-600">{tech.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>